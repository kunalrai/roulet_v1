
@{
    ViewBag.Title = "Points Allotment Listing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="page-title">
    Points Allotment Listing
</h1>

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="icon-fire"></i>
            <a href="/account/users/">Points Allotment Listing</a>
        </li>
    </ul>
</div>

<!-- END PAGE HEADER-->

<div class="row">
   <div class="col-md-12">
       <div class="portlet light ">
           <div class="portlet-title">
               <div class="caption">
                   <i class="icon-fire font-green-sharp"></i>
                   <span class="caption-subject font-green-sharp bold uppercase">Point Allotment Listing</span>
               </div>
           </div>
           <div class="">
               <div class="tabbable tabbable-tabdrop">
                   <ul class="nav nav-tabs">
                       <li class="active">
                           <a href="#tab1" data-toggle="tab" aria-expanded="true">Area manager</a>
                       </li>
                       <li class="">
                           <a href="#tab2" data-toggle="tab" aria-expanded="false">Main </a>
                       </li>
                       <li class="">
                           <a href="#tab3" data-toggle="tab" aria-expanded="false">User</a>
                       </li>
                   </ul>
                   <div class="tab-content">
                       <div class="tab-pane active" id="tab1">
                           <div class="portlet light portlet-fit portlet-datatable ">
                               <div class="portlet-title">
                                   <div class="caption">
                                       <i class="icon-briefcase font-green"></i>
                                       <span class="caption-subject font-green sbold uppercase"> Area managers </span>

                                   </div>
                                   <div class="action" style="clear:left" >
                                       <div >
                                           <input type="hidden" id="hdnstateid" name="hdnstateid" value="@if (ViewBag.stateid != null) { @ViewBag.stateid; }" />
                                           <label class="control-label">Select State</label>
                                           @Html.DropDownList("state", new SelectList(ViewBag.state, "Value", "Text"), "--Select State--", new { @id = "ddstate", @class = "form-control edited", @required = "required" })
                                           </div>
                                       <div >
                                           <input type="hidden" id="hdndistrictid" name="hdndistrictid" value="@if (ViewBag.districtid != null) { @ViewBag.districtid; }" />
                                           <label class="control-label">Select District</label>
                                           
                                           <select id="ddldistrict" class="form-control edited" required="required">
                                               <option value="0">--Select District--</option>
                                           </select>
                                       </div>
                                     
                                   </div>
                               </div>
                               <div class="">
                                   <div class="table-container">
                                       <table class="table table-striped table-bordered table-hover table-checkable" id="managers-table">
                                           <thead>
                                               <tr role="row" class="heading">
                                                   <th width="5%"> Name </th>
                                                   <th width="15%"> Email </th>
                                                   <th width="15%"> Current Points(Bal.)</th>
                                                   <th width="15%"> Allot Points</th>
                                                   <th width="10%" class="sorting_disabled"> Actions </th>
                                               </tr>
                                           </thead>
                                       </table>
                                   </div>
                               </div>
                           </div>
                       </div>
                       <div class="tab-pane" id="tab2">
                           <div class="portlet light portlet-fit portlet-datatable ">
                               <div class="portlet-title">
                                   <div class="caption">
                                       <i class="icon-briefcase font-green"></i>
                                       <span class="caption-subject font-green sbold uppercase"> Main </span>

                                   </div>
                                   <div class="action" style="clear:left">
                                       <div>
                                           <input type="hidden" id="hdnstateid" name="hdnstateid" value="@if (ViewBag.stateid != null) { @ViewBag.stateid; }" />
                                           <label class="control-label">Select State</label>
                                           @Html.DropDownList("state", new SelectList(ViewBag.state, "Value", "Text"), "--Select State--", new { @id = "ddstate_m", @class = "form-control edited", @required = "required" })
                                       </div>
                                       <div>
                                           <input type="hidden" id="hdndistrictid" name="hdndistrictid" value="@if (ViewBag.districtid != null) { @ViewBag.districtid; }" />
                                           <label class="control-label">Select District</label>

                                           <select id="ddldistrict_m" class="form-control edited" required="required">
                                               <option value="0">--Select District--</option>
                                           </select>
                                       </div>
                                       <div>
                                           <label class="control-label">Select Manager</label>

                                           <select class="form-control edited" name="area_manger" id="area_manger"></select>
                                       </div>

                                   </div>
                               </div>
                               <div class="">
                                   <div class="table-container">
                                       <table class="table table-striped table-bordered table-hover table-checkable" id="mains-table">
                                           <thead>
                                               <tr role="row" class="heading">
                                                   <th width="5%"> Name </th>
                                                   <th width="15%"> Email </th>
                                                   <th width="15%"> Area Manager Name </th>
                                                   <th width="15%"> Current Points(Bal.)</th>
                                                   <th width="15%"> Allot Points</th>
                                                   <th width="10%" class="sorting_disabled"> Actions </th>
                                               </tr>
                                           </thead>
                                       </table>
                                   </div>
                               </div>
                           </div>
                       </div>
                       <div class="tab-pane" id="tab3">
                           <div class="portlet light portlet-fit portlet-datatable ">
                               <div class="portlet-title">
                                   <div class="caption">
                                       <i class="icon-briefcase font-green"></i>
                                       <span class="caption-subject font-green sbold uppercase"> Users </span>
                                   </div>
                                   <div class="action" style="clear:left">
                                       <div>
                                           <input type="hidden" id="hdnstateid" name="hdnstateid" value="@if (ViewBag.stateid != null) { @ViewBag.stateid; }" />
                                           <label class="control-label">Select State</label>
                                           @Html.DropDownList("state", new SelectList(ViewBag.state, "Value", "Text"), "--Select State--", new { @id = "ddstate_u", @class = "form-control edited", @required = "required" })
                                       </div>
                                       <div>
                                           <input type="hidden" id="hdndistrictid" name="hdndistrictid" value="@if (ViewBag.districtid != null) { @ViewBag.districtid; }" />
                                           <label class="control-label">Select District</label>

                                           <select id="ddldistrict_u" class="form-control edited" required="required">
                                               <option value="0">--Select District--</option>
                                           </select>
                                       </div>
                                       <div>
                                           <input type="hidden" id="area_manger_h" value="@if (ViewBag.manager != null) { @ViewBag.manager; }" />
                                           <label class="control-label">Select Manager</label>
                                           <select class="form-control edited" name="area_manger" id="area_manger"></select>
                                       </div>
                                       <div>
                                           <input type="hidden" id="main_h" value="@if (ViewBag.main != null) { @ViewBag.main; }" />
                                           <label class="control-label">Select Main</label>
                                           <select class="form-control edited" name="area_main" id="area_main"></select>
                                       </div>

                                   </div>
                               </div>
                               <div class="">
                                   <div class="table-container">
                                       <table class="table table-striped table-bordered table-hover table-checkable" id="users-table">
                                           <thead>
                                               <tr role="row" class="heading">
                                                   <th width="5%"> Name </th>
                                                   <th width="15%"> Email </th>
                                                   <th width="15%"> Area Manager</th>
                                                   <th width="15%"> Main</th>
                                                   <th width="15%"> Current Point (Bal.)</th>
                                                   <th width="15%"> Allot Points</th>
                                                   <th width="10%" class="sorting_disabled"> Actions </th>
                                               </tr>
                                           </thead>
                                       </table>
                                   </div>
                               </div>
                           </div>
                       </div>                       
                   </div>
               </div>

           </div>
       </div>
   </div>
</div>

<div class="row">

    <div class="col-md-12">

    </div>

    <!-- AJAX MODAL -->

    <div class="modal fade in" id="ajax">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <img src"~/www/assets/global/img/loading-spinner-grey.gif" alt="" class="loading"/>
                    <span> &nbsp;&nbsp;Saving.. </span>
                </div>
            </div>
        </div>
    </div>

    <!-- AJAX MODAL -->

</div>



